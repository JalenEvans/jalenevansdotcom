---
interface Props {
  title: string
  link?: string
  rawPath: string
  hoverColor: string
  width: number
  height: number
}

const { title, link, rawPath, hoverColor, width, height } = Astro.props

const customWidth = `calc(var(--spacing) * ${width})`
const customHeight = `calc(var(--spacing) * ${height})`
---

<a
  href={link}
  title={title}
  id="icon"
  class="w-(--custom-width) h-(--custom-height) enlarge-110"
  style={`--custom-width: ${customWidth}; --custom-height: ${customHeight};`}
  ><Fragment set:html={rawPath} /></a
>

<style define:vars={{ hoverColor: `${hoverColor}` }}>
  #icon {
    display: inline-block;
    color: var(--color-font);
  }

  #icon:hover {
    color: var(--hoverColor);
  }

  #icon :global(svg) {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }
</style>
