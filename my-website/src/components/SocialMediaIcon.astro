---
interface Props {
    link: string,
    rawPath: string,
    hoverColor: string,
}

const { link, rawPath, hoverColor } = Astro.props;
---
<a href={link} id="icon" class="w-8 h-8 enlarge-110"><Fragment set:html={rawPath}/></a>

<style define:vars={{ hoverColor: `${hoverColor}` }}>
    #icon {
        display: inline-block;
        color: var(--color-font);
    }

    #icon:hover {
        color: var(--hoverColor);
    }

    #icon :global(svg) {
        width: 100%;
        height: 100%;
        fill: currentColor;
    }
</style>