---
interface Props {
  title: string
  height: number | string
  link?: string
}

const { title, height, link = null } = Astro.props

const customHeight =
  height == 'auto' ? 'auto' : `calc(var(--spacing) * ${height})`
---

<div
  class="flex flex-col gap-3 p-8 bg-light text-font enlarge-102 h-(--custom-height)"
  style={`--custom-height: ${customHeight};`}
>
  <a href={link} class="flex flex-col gap-6">
    <h2 class="text-3xl">{title}</h2>
    <div class="flex-col gap-2">
      <slot />
      {
        link != null ? (
          <a class="link" href={link}>
            See more...
          </a>
        ) : null
      }
    </div>
  </a>
</div>
