---
interface Props {
  title: string
  content: string
  link: string
}

const { title, content, link } = Astro.props
---

<div class="flex flex-col gap-3 p-8 h-50 bg-light text-font enlarge-102">
  <a href={link}>
    <h2 class="text-2xl">{title}</h2>
    <div class="flex-col gap-2">
      <p class="">{content}</p>
      <a class="link" href={link}>See more...</a>
    </div>
  </a>
</div>
